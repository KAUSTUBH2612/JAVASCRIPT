<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Functions, Scope & Unit Converter</title>
</head>
<body style="font-family: Arial, sans-serif; max-width: 500px; margin: 20px auto;">

  <h2>Functions and Scope Example</h2>

  <p id="scope-example"></p>

  <h2>Unit Converter</h2>
  <label for="cmInput">Enter length in cm:</label>
  <input type="number" id="cmInput" placeholder="e.g. 100">
  <button onclick="convertUnits()">Convert</button>

  <p id="meterResult"></p>
  <p id="inchResult"></p>

  <script>
    let globalMessage = "I am a global variable.";

    function showScopeExample() {
      let localMessage = "I am a local variable.";
      return `Global: ${globalMessage}<br>Local: ${localMessage}`;
    }

    document.getElementById("scope-example").innerHTML = showScopeExample();

    function convertUnits() {
      let cm = document.getElementById("cmInput").value;
      cm = parseFloat(cm);

      if (isNaN(cm)) {
        alert("Please enter a valid number.");
        return;
      }

      let meters = cmToMeters(cm);
      let inches = cmToInches(cm);

      document.getElementById("meterResult").textContent = `${cm} cm = ${meters} meters`;
      document.getElementById("inchResult").textContent = `${cm} cm = ${inches} inches`;
    }

    function cmToMeters(cm) {
      return cm / 100;
    }

    function cmToInches(cm) {
      return (cm / 2.54).toFixed(2);
    }
  </script>
</body>
</html>