<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Arrays, Objects & Student Grade Tracker</title>
</head>
<body style="font-family: Arial, sans-serif; max-width: 600px; margin: 20px auto;">

  <h2>Arrays, Objects, and Methods</h2>
  <p id="arrayExample"></p>
  <p id="objectExample"></p>
  <p id="mapExample"></p>
  <p id="filterExample"></p>

  <h2>Student Grade Tracker</h2>
  <input type="text" id="studentName" placeholder="Student Name">
  <input type="number" id="studentGrade" placeholder="Grade (0-100)">
  <button onclick="addStudent()">Add Student</button>

  <h3>All Students</h3>
  <ul id="studentList"></ul>

  <h3>Passed Students (Grade â‰¥ 40)</h3>
  <ul id="passedList"></ul>

  <script>
    let numbers = [10, 20, 30, 40];
    numbers.push(50);
    numbers.pop();
    document.getElementById("arrayExample").textContent = "Array: " + numbers.join(", ");

    let person = { name: "John", age: 25, city: "Delhi" };
    person.age = 26;
    document.getElementById("objectExample").textContent = "Object: " + person.name + ", Age: " + person.age + ", City: " + person.city;

    let doubled = numbers.map(num => num * 2);
    document.getElementById("mapExample").textContent = "Mapped (x2): " + doubled.join(", ");

    let filtered = numbers.filter(num => num > 20);
    document.getElementById("filterExample").textContent = "Filtered (>20): " + filtered.join(", ");

    let students = [];

    function addStudent() {
      let name = document.getElementById("studentName").value;
      let grade = parseFloat(document.getElementById("studentGrade").value);

      if (!name || isNaN(grade)) {
        alert("Please enter a valid name and grade.");
        return;
      }

      let student = { name: name, grade: grade };
      students.push(student);

      document.getElementById("studentName").value = "";
      document.getElementById("studentGrade").value = "";

      updateStudentList();
      updatePassedList();
    }

    function updateStudentList() {
      let list = document.getElementById("studentList");
      list.innerHTML = "";
      students.forEach(s => {
        let li = document.createElement("li");
        li.textContent = `${s.name} - ${s.grade}`;
        list.appendChild(li);
      });
    }

    function updatePassedList() {
      let list = document.getElementById("passedList");
      list.innerHTML = "";
      let passed = students.filter(s => s.grade >= 40);
      passed.forEach(s => {
        let li = document.createElement("li");
        li.textContent = `${s.name} - ${s.grade}`;
        list.appendChild(li);
      });
    }
  </script>
</body>
			</html>